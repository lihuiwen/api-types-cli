{
    "compilerOptions": {
      "target": "ES2022",
      "module": "CommonJS",
      "lib": ["ES2022"],
      "moduleResolution": "node",
      "outDir": "./dist-test",
      "strict": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "allowJs": true,
      "types": ["node", "jest"],
      "declaration": false,
      "sourceMap": false
    },
    "include": [
      "src/**/*",
      "tests/**/*"
    ],
    "exclude": [
      "node_modules",
      "bin",
      "dist-test"
    ]
  }